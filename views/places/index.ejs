<% include ../partials/header %>

    <!-- Banner -->
    <section class="banner full">
        <% places.forEach(function(place){ %>
            <article>
                <img src="<%= place.image %>" alt="" />
                <div class="inner">
                    <header>
                        <p><%= place.topic %></p>
                        <!-- <h2><%= place.title %></h2> -->
                    </header>
                </div>
            </article>
        <% }); %>
    </section>

    <!-- One -->
    <section id="one" class="wrapper style2">
        <div class="inner">
            <div class="grid-style">

                <% places.forEach(function(place){ %>
                    <div>
                        <div class="box">
                            <div class="image fit">
                                <img src="<%= place.image %>" alt="" />
                            </div>
                            <div class="content">
                                <header class="align-center">
                                    <p><%= place.topic %></p>
                                    <h2><%= place.title %></h2>
                                </header>
                                <p> <%= place.describe %></p>
                                <footer class="align-center">
                                    <a href="/<%= place._id %>" class="button alt">Read More</a>
                                </footer>
                            </div>
                        </div>
                    </div>
                <% }); %>

            </div>
        </div>
    </section>

    <!-- Two -->
    <section id="two" class="wrapper style3">
        <div class="inner">
            <header class="align-center">
                <p>Arab Proverb</p>
                <h2>Who lives sees much. Who travels sees more.</h2>
            </header>
        </div>
    </section>

    <!-- Three -->
    <section id="three" class="wrapper style2">
        <div class="inner">
            <header class="align-center">
                <p class="special">Collect a beautiful picture all over the world here.</p>
                <h2>Gallery</h2>
            </header>
            <div class="gallery">
                <% places.forEach(function(place){ %>
                    <div>
                        <div class="image fit">
                            <a href="#">
                                <img src="<%= place.image %>" alt="" />
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>


<% include ../partials/footer %>