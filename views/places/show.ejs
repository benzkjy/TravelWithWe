<% include ../partials/headersub %>
    <div id="main" class="container">
        <h2><%=place.topic%></h2>
        <img src="<%= place.image %>" alt="">
        <hr>
        <div>
            <%= place.describe %>
        </div>
        <h4 class="align-right">Published By <%= place.author.username %></h4>
        <ul class="actions">
            <li>
                <a href="/<%= place._id %>/edit" class="button special">EDIT</a>
            </li>
            <li>
                <form action="/<%= place._id %>?_method=DELETE" method="POST">
                    <button class="danger">DELETE</button>
                </form>
            </li>
        </ul>
        
        <hr>
        
        <% place.comments.forEach(function(comment){ %>
            <div class="self">
                <div class="content">
                    <header class="align-left">
                        <h2>
                            <%= comment.author.username %>
                        </h2>
                        
                    </header>
                    <p>- <%= comment.text %></p>
                    <header class="align-right">10 days ago</span>
                </div>
                
            </div>
        <% })  %>
        <hr>
        <a href="/<%= place._id %>/comments/new" class="button alt">COMMENT</a>
        
    </div>

<% include ../partials/footer %>